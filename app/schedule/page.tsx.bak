"use client";

import { useState, useEffect } from "react";
import { motion } from "framer-motion";
import { useSession } from "next-auth/react";
import { useRouter } from "next/navigation";

type Band = {
  id: string;
  name: string;
  day: number;
  stage: string;
  startTime: string;
  endTime: string;
  isAttending?: boolean;
  friendsCount?: number;
  totalCount?: number;
};

export default function SchedulePage() {
  const { data: session, status } = useSession();
  const router = useRouter();
  const [selectedDay, setSelectedDay] = useState<1 | 2>(1);
  const [bands, setBands] = useState<Band[]>([]);
  const [loading, setLoading] = useState(true);
  const [myAttendances, setMyAttendances] = useState<Set<string>>(new Set());

  useEffect(() => {
    if (status === "unauthenticated") {
      router.push("/login");
    }
  }, [status, router]);

  useEffect(() => {
    if (status === "authenticated") {
      fetchData();
    }
  }, [selectedDay, status]);

  const fetchData = async () => {
    setLoading(true);
    try {
      // Fetch bandas
      const bandsRes = await fetch(`/api/bands?day=${selectedDay}`);
      const bandsData = await bandsRes.json();

      // Fetch mis asistencias
      const attendanceRes = await fetch("/api/attendance");
      const attendanceData = await attendanceRes.json();
      const attendingIds = new Set(attendanceData.map((a: any) => a.bandId));
      setMyAttendances(attendingIds);

      // Marcar bandas donde voy
      const enrichedBands = bandsData.map((band: Band) => ({
        ...band,
        isAttending: attendingIds.has(band.id),
      }));

      setBands(enrichedBands);
    } catch (error) {
      console.error("Error fetching data:", error);
    } finally {
      setLoading(false);
    }
  };

  const toggleAttendance = async (bandId: string, currentlyAttending: boolean) => {
    try {
      const res = await fetch("/api/attendance", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          bandId,
          attending: !currentlyAttending,
        }),
      });

      if (res.ok) {
        // Actualizar UI optimisticamente
        setBands((prev) =>
          prev.map((band) =>
            band.id === bandId ? { ...band, isAttending: !currentlyAttending } : band
          )
        );

        if (!currentlyAttending) {
          setMyAttendances((prev) => new Set(prev).add(bandId));
        } else {
          setMyAttendances((prev) => {
            const newSet = new Set(prev);
            newSet.delete(bandId);
            return newSet;
          });
        }
      }
    } catch (error) {
      console.error("Error toggling attendance:", error);
    }
  };

  if (status === "loading" || status === "unauthenticated") {
    return (
      <div className="min-h-screen bg-background flex items-center justify-center">
        <div className="animate-pulse text-text-secondary">Cargando...</div>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-background pb-20">
      {/* Header */}
      <header className="bg-white border-b border-gray-200 sticky top-0 z-10">
        <div className="px-4 py-3">
          <div className="flex items-center justify-between mb-3">
            <h1 className="text-xl font-bold text-text-primary">Cosqu√≠n Rock 2026</h1>
            <div className="text-sm text-text-secondary">
              @{session?.user?.name || "Usuario"}
            </div>
          </div>

          {/* Day toggle */}
          <div className="flex gap-2">
            <motion.button
              whileTap={{ scale: 0.95 }}
              onClick={() => setSelectedDay(1)}
              className={`flex-1 py-2 px-4 rounded-lg font-medium transition-colors ${
                selectedDay === 1
                  ? "bg-primary text-white shadow-md"
                  : "bg-gray-100 text-text-secondary hover:bg-gray-200"
              }`}
            >
              S√°bado 15
            </motion.button>
            <motion.button
              whileTap={{ scale: 0.95 }}
              onClick={() => setSelectedDay(2)}
              className={`flex-1 py-2 px-4 rounded-lg font-medium transition-colors ${
                selectedDay === 2
                  ? "bg-primary text-white shadow-md"
                  : "bg-gray-100 text-text-secondary hover:bg-gray-200"
              }`}
            >
              Domingo 16
            </motion.button>
          </div>
        </div>
      </header>

      {/* Schedule Grid */}
      <div className="p-4">
        {loading ? (
          <div className="space-y-3">
            {[1, 2, 3, 4, 5].map((i) => (
              <div key={i} className="bg-white rounded-lg p-4 animate-pulse">
                <div className="h-5 bg-gray-200 rounded w-3/4 mb-2"></div>
                <div className="h-4 bg-gray-200 rounded w-1/2"></div>
              </div>
            ))}
          </div>
        ) : (
          <div className="space-y-2">
            {bands.map((band, index) => (
              <motion.div
                key={band.id}
                initial={{ opacity: 0, y: 20 }}
                animate={{ opacity: 1, y: 0 }}
                transition={{ delay: index * 0.03 }}
                onClick={() => toggleAttendance(band.id, band.isAttending || false)}
                className={`bg-white rounded-lg p-4 shadow-sm border-2 transition-all cursor-pointer ${
                  band.isAttending
                    ? "border-primary bg-primary/5"
                    : "border-gray-100 hover:border-gray-200"
                }`}
              >
                <div className="flex items-start justify-between">
                  <div className="flex-1">
                    <h3 className="font-semibold text-text-primary mb-1">{band.name}</h3>
                    <p className="text-sm text-text-secondary">
                      {new Date(band.startTime).toLocaleTimeString("es-AR", {
                        hour: "2-digit",
                        minute: "2-digit",
                      })}{" "}
                      ‚Ä¢ {band.stage.replace(/_/g, " ")}
                    </p>
                  </div>

                  {band.isAttending && (
                    <motion.div
                      initial={{ scale: 0 }}
                      animate={{ scale: 1 }}
                      className="ml-2 flex-shrink-0"
                    >
                      <div className="w-8 h-8 bg-primary rounded-full flex items-center justify-center">
                        <span className="text-white text-lg">‚úì</span>
                      </div>
                    </motion.div>
                  )}
                </div>
              </motion.div>
            ))}

            {bands.length === 0 && (
              <div className="text-center py-12 text-text-secondary">
                No hay bandas programadas para este d√≠a
              </div>
            )}
          </div>
        )}
      </div>

      {/* Bottom Navigation */}
      <nav className="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 px-4 py-2">
        <div className="flex justify-around items-center max-w-lg mx-auto">
          <button className="flex flex-col items-center text-primary">
            <span className="text-2xl mb-1">üè†</span>
            <span className="text-xs font-medium">Grilla</span>
          </button>
          <button
            onClick={() => router.push("/my-bands")}
            className="flex flex-col items-center text-text-secondary hover:text-primary transition-colors"
          >
            <span className="text-2xl mb-1">‚≠ê</span>
            <span className="text-xs">Mis Bandas</span>
          </button>
          <button
            onClick={() => router.push("/groups")}
            className="flex flex-col items-center text-text-secondary hover:text-primary transition-colors"
          >
            <span className="text-2xl mb-1">üë•</span>
            <span className="text-xs">Grupos</span>
          </button>
          <button
            onClick={() => router.push("/profile")}
            className="flex flex-col items-center text-text-secondary hover:text-primary transition-colors"
          >
            <span className="text-2xl mb-1">üë§</span>
            <span className="text-xs">Perfil</span>
          </button>
        </div>
      </nav>
    </div>
  );
}
